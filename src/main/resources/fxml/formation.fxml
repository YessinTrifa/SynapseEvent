<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.FormationController">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #0891b2, #06b6d4); -fx-padding: 15;" spacing="10">
            <Label text="Formation Events Management" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 0;">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Create/Edit Formation Event" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                
                <Separator />
                
                <!-- Basic Information -->
                <Label text="Basic Information" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #0891b2;" />
                <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>
                    
                    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nameField" promptText="Event name" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextArea fx:id="descriptionField" wrapText="true" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                </GridPane>
                
                <Separator />
                
                <!-- Schedule -->
                <Label text="Schedule" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #0891b2;" />
                <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" />
                        <ColumnConstraints percentWidth="60" />
                    </columnConstraints>
                    
                    <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                </GridPane>
                
                <Separator />
                
                <!-- Action Buttons -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Button text="Add Event" style="-fx-padding: 8 20; -fx-font-weight: bold;" />
                    <Button text="Update" style="-fx-padding: 8 20; -fx-font-weight: bold;" />
                    <Button text="Delete" style="-fx-padding: 8 20; -fx-font-weight: bold;" />
                    <Button text="Clear" style="-fx-padding: 8 20; -fx-font-weight: bold;" />
                </HBox>
                
                <Region VBox.vgrow="ALWAYS" />
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.FormationController">
    <TableView fx:id="formationTable" onMouseClicked="#selectFormationEvent">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="locationColumn" text="Location" />
            <TableColumn fx:id="capacityColumn" text="Capacity" />
            <TableColumn fx:id="priceColumn" text="Price" />
            <TableColumn fx:id="statusColumn" text="Status" />
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" promptText="Name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Date:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <DatePicker fx:id="datePicker" promptText="Date" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Spinner fx:id="startTimeHourSpinner" promptText="HH" GridPane.columnIndex="1" GridPane.rowIndex="1" min="0" max="23" initialValue="9"/>

        <Label text="End Time:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Spinner fx:id="endTimeHourSpinner" promptText="HH" GridPane.columnIndex="3" GridPane.rowIndex="1" min="0" max="23" initialValue="17"/>

        <Label text="Venue Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="venueTypeFilterComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Venue:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <ComboBox fx:id="venueComboBox" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        <Label text="Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Spinner fx:id="capacitySpinner" promptText="Capacity" GridPane.columnIndex="1" GridPane.rowIndex="3" min="1" max="1000" initialValue="20"/>

        <Label text="Price (â‚¬):" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Spinner fx:id="priceSpinner" promptText="Price" GridPane.columnIndex="3" GridPane.rowIndex="3" min="0" max="10000" initialValue="0" amountToStepBy="10"/>

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Description:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <TextArea fx:id="descriptionField" promptText="Description" wrapText="true" GridPane.columnIndex="3" GridPane.columnSpan="1" GridPane.rowIndex="5"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add" onAction="#addFormationEvent" />
        <Button text="Update" onAction="#updateFormationEvent" />
        <Button text="Delete" onAction="#deleteFormationEvent" />
        <Button text="Publish" onAction="#publishEvent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Save as Draft" onAction="#saveAsDraft" />
    </HBox>
</VBox>

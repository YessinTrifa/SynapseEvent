                        <Label text="ðŸ’° Pricing &amp; Capacity" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #f87171;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            
                            <Label text="Capacity:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <TextField fx:id="capacityField" promptText="Number of guests" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                            
                            <Label text="Price (TND):" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <TextField fx:id="priceField" promptText="Ticket price" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                            
                            <Label text="Min Age:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <TextField fx:id="ageRestrictionField" promptText="Minimum age requirement" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                            
                            <Label text="Catering:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <CheckBox fx:id="cateringCheckBox" text="Includes catering" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: #e2e8f0;" />
                        </GridPane>
                    </VBox>
                    
                    <!-- Filters -->
                    <VBox spacing="10" style="-fx-background-color: rgba(30, 41, 59, 0.5); -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 8;">
                        <Label text="ðŸ” Filters" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #f87171;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            
                            <Label text="Filter by Date:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <DatePicker fx:id="filterDatePicker" promptText="Select filter date" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                        </GridPane>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="12" style="-fx-padding: 10;">
                        <Button text="âž• Add Event" onAction="#addPartyingEvent" style="-fx-padding: 12 24; -fx-font-weight: bold; -fx-background-color: #dc2626; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                        <Button text="âœï¸ Update" onAction="#updatePartyingEvent" style="-fx-padding: 12 24; -fx-font-weight: bold; -fx-background-color: #059669; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                        <Button text="ðŸ—‘ï¸ Delete" onAction="#deletePartyingEvent" style="-fx-padding: 12 24; -fx-font-weight: bold; -fx-background-color: #dc2626; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                        <Button text="ðŸ”„ Clear" onAction="#clearFields" style="-fx-padding: 12 24; -fx-font-weight: bold; -fx-background-color: #6b7280; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                    </HBox>
                </VBox>
            </ScrollPane>
            
            <!-- Right Panel - Table -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- Table Header -->
                <VBox spacing="5" style="-fx-background-color: rgba(30, 41, 59, 0.5); -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 8;">
                    <Label text="ðŸŽŠ Partying Events List" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <Label text="Click on an event to edit its details" style="-fx-font-size: 12; -fx-text-fill: #94a3b8;" />
                </VBox>
                
                <!-- Table -->
                <TableView fx:id="partyingTable" onMouseClicked="#selectPartyingEvent" style="-fx-background-color: rgba(30, 41, 59, 0.4); -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 8; -fx-text-fill: white;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        <TableColumn fx:id="venueColumn" text="Venue" prefWidth="120" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="80" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="80" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                    </columns>
                </TableView>
                
                <!-- Quick Actions -->
                <HBox spacing="12" style="-fx-padding: 10;">
                    <Button text="ðŸ“¤ Publish" onAction="#publishEvent" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #059669; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13;" />
                    <Button text="ðŸ“ Save Draft" onAction="#saveAsDraft" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #f59e0b; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13;" />
                    <Button text="ðŸŽµ Filter by Venue" onAction="#filterByVenueType" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #6366f1; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13;" />
                    <Button text="ðŸ“… Filter by Date" onAction="#filterByDate" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13;" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>

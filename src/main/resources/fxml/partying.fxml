                    </VBox>
                    
                    <!-- Basic Information -->
                    <VBox spacing="10" style="-fx-background-color: rgba(30, 41, 59, 0.5); -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 8;">
                        <Label text="ðŸŽŠ Party Details" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #f87171;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            
                            <Label text="Event Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <TextField fx:id="nameField" promptText="Enter party event name" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14;" />
                            
                            <Label text="Theme:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <ComboBox fx:id="themeComboBox" promptText="Select party theme" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                            
                            <Label text="Music Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />

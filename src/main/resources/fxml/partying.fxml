<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.synapseevent.controller.PartyingController"
    style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #0f172a 0%, #111827 50%, #1e293b 100%);">
    <top>
        <VBox style="-fx-background-color: rgba(15, 23, 42, 0.92); -fx-padding: 20; -fx-border-color: rgba(255,255,255,0.10); -fx-border-width: 0 0 1 0;" spacing="10">
            <Label text="ðŸŽ‰ Partying Events Management" style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" />

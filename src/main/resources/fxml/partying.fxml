                        <Label text="ðŸ“… Schedule &amp; Venue" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #f87171;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            

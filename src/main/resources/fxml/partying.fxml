                            <DatePicker fx:id="datePicker" promptText="Select date" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                            
                            <Label text="Start Time:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <ComboBox fx:id="startTimeComboBox" promptText="Select start time" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                            
                            <Label text="End Time:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <ComboBox fx:id="endTimeComboBox" promptText="Select end time" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                            
                            <Label text="Venue Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <ComboBox fx:id="venueTypeFilterComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                            
                            <Label text="Venue:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #e2e8f0;" />
                            <ComboBox fx:id="venueComboBox" promptText="Select venue" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-height: 40; -fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;" />
                        </GridPane>
                    </VBox>
                    
                    <!-- Pricing &amp; Capacity -->

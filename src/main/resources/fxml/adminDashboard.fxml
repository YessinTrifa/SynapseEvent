<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.AdminDashboardController">
    <HBox>
        <Button text="Logout" onAction="#logout"/>
    </HBox>
    <TabPane>
    <Tab text="Users">
        <VBox>
            <TableView fx:id="usersTable">
                <columns>
                    <TableColumn fx:id="userNameColumn" text="Name" />
                    <TableColumn fx:id="userEmailColumn" text="Email" />
                    <TableColumn fx:id="userRoleColumn" text="Role" />
                    <TableColumn fx:id="userActionColumn" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </Tab>
    <Tab text="Events">
        <VBox>
            <HBox>
                <Button text="Create Event" onAction="#createEvent" />
                <Label text="Filter by Type:" />
                <ComboBox fx:id="eventTypeFilter" onAction="#filterEventsByType" />
            </HBox>
            <TableView fx:id="eventsTable">
                <columns>
                    <TableColumn fx:id="eventNameColumn" text="Name" />
                    <TableColumn fx:id="eventDateColumn" text="Date" />
                    <TableColumn fx:id="eventLocationColumn" text="Location" />
                    <TableColumn fx:id="eventCapacityColumn" text="Capacity" />
                    <TableColumn fx:id="eventPriceColumn" text="Price" />
                    <TableColumn fx:id="eventStatusColumn" text="Status" />
                    <TableColumn fx:id="eventTypeColumn" text="Type" />
                    <TableColumn fx:id="eventActionColumn" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </Tab>
    <Tab text="Bookings">
        <VBox>
            <TableView fx:id="bookingsTable">
                <columns>
                    <TableColumn fx:id="bookingUserColumn" text="User" />
                    <TableColumn fx:id="bookingTypeColumn" text="Event Type" />
                    <TableColumn fx:id="bookingEventIdColumn" text="Event ID" />
                    <TableColumn fx:id="bookingDateColumn" text="Booking Date" />
                    <TableColumn fx:id="bookingStatusColumn" text="Status" />
                    <TableColumn fx:id="bookingActionColumn" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </Tab>
    <Tab text="Custom Requests">
        <VBox>
            <TableView fx:id="customRequestsTable">
                <columns>
                    <TableColumn fx:id="requestUserColumn" text="User" />
                    <TableColumn fx:id="requestDetailsColumn" text="Details" />
                    <TableColumn fx:id="requestDateColumn" text="Request Date" />
                    <TableColumn fx:id="requestStatusColumn" text="Status" />
                    <TableColumn fx:id="requestActionColumn" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </Tab>
</TabPane>
</VBox>

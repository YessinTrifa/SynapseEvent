                            <TableColumn fx:id="entrepriseActionColumn" text="Action" style="-fx-text-fill: white; -fx-background-color: #1e293b;" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </content>

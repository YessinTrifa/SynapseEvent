                    <HBox spacing="10">
                        <Button text="âž• Add Enterprise" onAction="#addEnterprise" 
                                style="-fx-background-color: rgba(139, 92, 246, 0.2); -fx-text-fill: #a78bfa; -fx-border-color: #8b5cf6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20; -fx-font-weight: 600;" />
                    </HBox>
                    <TableView fx:id="entreprisesTable" styleClass="table-view" style="-fx-background-color: rgba(30, 41, 59, 0.4); -fx-background-radius: 8; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 8; -fx-text-fill: white;" VBox.vgrow="ALWAYS">

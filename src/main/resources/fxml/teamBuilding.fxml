<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.TeamBuildingController">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #059669, #10b981); -fx-padding: 20;" spacing="10">
            <Label text="ðŸ¤ Team Building Events Management" style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" />
            <Label text="Create and manage team building activities" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14;" />
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.4" style="-fx-padding: 10;">
            <!-- Left Panel - Form -->
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #f8fafc;">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <!-- Form Header -->
                    <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="Create/Edit Team Building Event" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />
                        <Label text="Fill in the details below to create an engaging team building event" style="-fx-font-size: 12; -fx-text-fill: #64748b;" />
                    </VBox>
                    
                    <!-- Basic Information -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="ðŸŽ¯ Basic Information" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #059669;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            
                            <Label text="Event Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <TextField fx:id="nameField" promptText="Enter team building event name" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <TextArea fx:id="descriptionField" wrapText="true" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Activity Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <ComboBox fx:id="activityTypeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Objectives:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <TextArea fx:id="objectivesField" wrapText="true" prefRowCount="2" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <ComboBox fx:id="statusComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                        </GridPane>
                    </VBox>
                    
                    <!-- Schedule & Location -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="ðŸ“… Schedule &amp; Location" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #059669;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            
                            <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Start Time:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <Spinner fx:id="startTimeHourSpinner" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="End Time:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <Spinner fx:id="endTimeHourSpinner" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Venue Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <ComboBox fx:id="venueTypeFilterComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Venue:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <ComboBox fx:id="venueComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                        </GridPane>
                    </VBox>
                    
                    <!-- Pricing & Capacity -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="ðŸ’° Pricing &amp; Capacity" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #059669;" />
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="35" />
                                <ColumnConstraints percentWidth="65" />
                            </columnConstraints>
                            
                            <Label text="Capacity:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <Spinner fx:id="capacitySpinner" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Price (TND):" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <Spinner fx:id="priceSpinner" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Difficulty:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <ComboBox fx:id="difficultyComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-height: 35; -fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                            
                            <Label text="Materials:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #374151;" />
                            <TextArea fx:id="materialsField" wrapText="true" prefRowCount="2" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-border-color: #d1d5db; -fx-border-radius: 6;" />
                        </GridPane>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="10" style="-fx-padding: 10;">
                        <Button text="âž• Add Event" onAction="#addTeamBuildingEvent" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #059669; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                        <Button text="âœï¸ Update" onAction="#updateTeamBuildingEvent" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #059669; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                        <Button text="ðŸ—‘ï¸ Delete" onAction="#deleteTeamBuildingEvent" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #dc2626; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                        <Button text="ðŸ”„ Clear" onAction="#clearFields" style="-fx-padding: 10 20; -fx-font-weight: bold; -fx-background-color: #6b7280; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                    </HBox>
                </VBox>
            </ScrollPane>
            
            <!-- Right Panel - Table -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- Table Header -->
                <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="ðŸ¤ Team Building Events List" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />
                    <Label text="Click on an event to edit its details" style="-fx-font-size: 12; -fx-text-fill: #64748b;" />
                </VBox>
                
                <!-- Table -->
                <TableView fx:id="teamBuildingTable" style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100" />
                        <TableColumn fx:id="locationColumn" text="Location" prefWidth="120" />
                        <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="80" />
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="80" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                    </columns>
                </TableView>
                
                <!-- Quick Actions -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Button text="ðŸ“¤ Publish" onAction="#publishEvent" style="-fx-padding: 8 16; -fx-font-weight: bold; -fx-background-color: #059669; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                    <Button text="ðŸ“ Save Draft" onAction="#saveAsDraft" style="-fx-padding: 8 16; -fx-font-weight: bold; -fx-background-color: #f59e0b; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                    <Button text="ðŸ“Š Generate Report" style="-fx-padding: 8 16; -fx-font-weight: bold; -fx-background-color: #6366f1; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                    <Button text="ðŸ’° Calculate Budget" style="-fx-padding: 8 16; -fx-font-weight: bold; -fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6;" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:id="root" styleClass="root" stylesheets="@../css/auth.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.synapseevent.controller.LandingController">

   <!-- HEADER -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="12" styleClass="web-header">
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="28" preserveRatio="true" styleClass="logo">
               <image>
                  <Image url="@../images/logo.png"/>
               </image>
            </ImageView>
            <Label text="SynapseEvent" styleClass="web-logo-text"/>
         </HBox>

         <Region HBox.hgrow="ALWAYS"/>

         <Button text="Login" onAction="#goToLogin" styleClass="btn-ghost"/>
         <Button text="Get started" onAction="#goToRegister" styleClass="btn-primary"/>
      </HBox>
   </top>

   <!-- HERO -->
   <center>
      <HBox alignment="CENTER" fillHeight="true">
      <HBox styleClass="hero-wrap" spacing="40" alignment="CENTER">
         <!-- left text -->
         <VBox spacing="14" styleClass="hero-left" HBox.hgrow="ALWAYS">
            <Label text="Event management, simplified" styleClass="hero-kicker"/>
            <Label text="Plan events your team actually enjoys."
                   styleClass="hero-title" wrapText="true"/>
            <Label text="Create events, manage guests, book venues, and track feedback  all in one clean workflow."
                   styleClass="hero-subtitle" wrapText="true"/>
            <Button text="Get started â†’" onAction="#goToRegister" styleClass="btn-primary"/>
         </VBox>
         <!-- right illustration -->
         <VBox alignment="CENTER_RIGHT" styleClass="hero-right" fx:id="heroCard">
            <ImageView fitWidth="520" preserveRatio="true" styleClass="hero-illustration">
               <image>
                  <Image url="@../images/meeting.png"/>
               </image>
            </ImageView>
         </VBox>
      </HBox>
      </HBox>
   </center>

</BorderPane>
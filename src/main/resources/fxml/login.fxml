<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.LoginController">
    <Label text="Login"/>
    <TextField fx:id="emailField" promptText="Enter email"/>
    <PasswordField fx:id="passwordField" promptText="Enter password"/>
    <HBox>
        <Button text="Login as Admin" onAction="#loginAsAdmin"/>
        <Button text="Login as User" onAction="#loginAsUser"/>
    </HBox>
</VBox>
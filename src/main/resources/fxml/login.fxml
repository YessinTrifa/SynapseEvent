<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<BorderPane styleClass="root" stylesheets="@../css/auth.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.LoginController">
   <center>
      <StackPane alignment="CENTER">
      <HBox maxWidth="980" spacing="40" styleClass="shell" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="60" left="60" right="60" top="60" />
         </padding>

         <!-- LEFT: hero / branding -->
         <VBox spacing="14" styleClass="hero" HBox.hgrow="ALWAYS">
            <Label styleClass="brand-title" text="SynapseEvent" />
            <Label styleClass="brand-subtitle" text="Manage events, guests, tickets and teams in one place." wrapText="true" />

            <VBox spacing="10" styleClass="hero-bullets">
               <Label styleClass="hero-line" text="Organize events with clarity" />
               <Label styleClass="hero-line" text="Keep your guests and tickets in sync" />
               <Label styleClass="hero-line" text="Collaborate with your team in one place" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />
            <Label styleClass="muted" text="© SynapseEvent" />
         </VBox>

         <!-- RIGHT: form card -->
         <VBox maxWidth="420" minWidth="360" spacing="16" styleClass="card">
            <Label styleClass="card-title" text="Sign in" />
            <Label styleClass="card-subtitle" text="Use your credentials to access the app." />

            <VBox spacing="8">
               <Label styleClass="field-label" text="Email" />
               <TextField fx:id="emailField" promptText="name@example.com" styleClass="field" />
            </VBox>

            <VBox spacing="8">
               <Label styleClass="field-label" text="Password" />
               <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="field" />
            </VBox>

            <!-- Keep your existing handlers (no backend changes needed) -->
            <VBox spacing="10">
               <Button text="Continue as Admin" onAction="#loginAsAdmin" styleClass="btn-primary" maxWidth="1e9"/>
               <Button text="Continue as User"  onAction="#loginAsUser"  styleClass="btn-ghost"   maxWidth="1e9"/>
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="8">
               <Label contentDisplay="CENTER" styleClass="muted" text="No account?" textAlignment="CENTER" />
               <Hyperlink onAction="#goToRegister" styleClass="link" text="Create one" />
               <!-- optional (remove if you don’t want it) -->
               <Hyperlink styleClass="link" />
            </HBox>
         </VBox>
      </HBox>
      </StackPane>
   </center>
</BorderPane>

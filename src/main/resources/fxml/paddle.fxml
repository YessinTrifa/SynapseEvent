<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synapseevent.controller.PaddleController">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #1e3a8a, #1e40af); -fx-padding: 15;" spacing="10">
            <Label text="Paddle Events Management" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.4" style="-fx-padding: 0;">
            <!-- Left Side: Event List with Scroll -->
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 0;">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <Label text="All Paddle Events" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                    <TableView fx:id="paddleTable" style="-fx-font-size: 11; -fx-padding: 5;" prefHeight="600">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="40" />
                            <TableColumn fx:id="nameColumn" text="Name" prefWidth="80" />
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="80" />
                            <TableColumn fx:id="locationColumn" text="Location" prefWidth="100" />
                            <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="60" />
                            <TableColumn fx:id="priceColumn" text="Price" prefWidth="60" />
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="70" />
                            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="100" />
                        </columns>
                    </TableView>
                </VBox>
            </ScrollPane>
            
            <!-- Right Side: Form with Scroll -->
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 0;">
                <VBox spacing="12" style="-fx-padding: 15;">
                    <Label text="Create/Edit Paddle Event" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                    
                    <Separator />
                    
                    <!-- Basic Information Section -->
                    <Label text="Basic Information" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;" />
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="40" />
                            <ColumnConstraints percentWidth="60" />
                        </columnConstraints>
                        
                        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextArea fx:id="descriptionField" wrapText="true" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </GridPane>
                    
                    <Separator />
                    
                    <!-- Schedule (Horaire) Section -->
                    <Label text="Schedule (Horaire)" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;" />
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="40" />
                            <ColumnConstraints percentWidth="60" />
                        </columnConstraints>
                        
                        <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Start Time (Hour):" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Spinner fx:id="startTimeHourSpinner" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="End Time (Hour):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Spinner fx:id="endTimeHourSpinner" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </GridPane>
                    
                    <Separator />
                    
                    <!-- Location &amp; Map Section -->
                    <Label text="Location &amp; Map" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;" />
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="40" />
                            <ColumnConstraints percentWidth="60" />
                        </columnConstraints>
                        
                        <Label text="Venue:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <ComboBox fx:id="venueComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Venue Type Filter:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <ComboBox fx:id="venueTypeFilterComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="Map/GPS:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="mapField" promptText="Map URL or coordinates" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </GridPane>
                    
                    <Separator />
                    
                    <!-- Capacity &amp; Booking Section -->
                    <Label text="Capacity &amp; Reservations" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;" />
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="40" />
                            <ColumnConstraints percentWidth="60" />
                        </columnConstraints>
                        
                        <Label text="Capacity:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Spinner fx:id="capacitySpinner" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Reservations:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Spinner fx:id="reservationSpinner" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="Available:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <CheckBox fx:id="disponibiliteCheckBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </GridPane>
                    
                    <Separator />
                    
                    <!-- Pricing (Coût) Section -->
                    <Label text="Pricing (Coût)" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;" />
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-border-color: #e5e7eb; -fx-border-radius: 5; -fx-border-width: 1;">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="40" />
                            <ColumnConstraints percentWidth="60" />
                        </columnConstraints>
                        
                        <Label text="Price/Cost (TND):" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Spinner fx:id="priceSpinner" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    </GridPane>
                    
                    <Separator />
                    
                    <!-- Action Buttons -->
                    <HBox spacing="10" style="-fx-padding: 10;">
                        <Button text="Add Event" style="-fx-padding: 8 20; -fx-font-weight: bold;" onAction="#addPaddleEvent" />
                        <Button text="Update" style="-fx-padding: 8 20; -fx-font-weight: bold;" onAction="#updatePaddleEvent" />
                        <Button text="Delete" style="-fx-padding: 8 20; -fx-font-weight: bold;" onAction="#deletePaddleEvent" />
                        <Button text="Clear" style="-fx-padding: 8 20; -fx-font-weight: bold;" onAction="#clearFields" />
                    </HBox>
                    
                    <Region VBox.vgrow="ALWAYS" />
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>
